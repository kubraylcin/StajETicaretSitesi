@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Breadcrumb -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Detayları</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { id = ViewBag.x })
        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new { id = ViewBag.x })
    </div>

    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4" id="productTab" role="tablist">
                    <a class="nav-item nav-link text-dark active" id="about-tab" data-toggle="tab" href="#tab-pane-1" role="tab" aria-controls="tab-pane-1" aria-selected="true">Ürün Hakkında</a>
                    <a class="nav-item nav-link text-dark" id="info-tab" data-toggle="tab" href="#tab-pane-2" role="tab" aria-controls="tab-pane-2" aria-selected="false">Ürün Bilgisi</a>
                    <a class="nav-item nav-link text-dark" id="comments-tab" data-toggle="tab" href="#tab-pane-3" role="tab" aria-controls="tab-pane-3" aria-selected="false">Yorumlar</a>
                </div>

                <div class="tab-content" id="productTabContent">
                    <div class="tab-pane fade show active" id="tab-pane-1" role="tabpanel" aria-labelledby="about-tab">
                        @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial", new { id = ViewBag.x })
                    </div>
                    <div class="tab-pane fade" id="tab-pane-2" role="tabpanel" aria-labelledby="info-tab">
                        @await Component.InvokeAsync("_ProductDetailInformationComponentPartial", new { id = ViewBag.x })
                    </div>
                    <div class="tab-pane fade" id="tab-pane-3" role="tabpanel" aria-labelledby="comments-tab">
                        @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new { id = ViewBag.x })
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
