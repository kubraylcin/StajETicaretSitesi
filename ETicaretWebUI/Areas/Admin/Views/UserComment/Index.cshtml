@model List<UserCommentResultDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h3 class="mb-3">Yorum Listesi</h3>

                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Yorum</th>
                            <th>Değerlendirme</th>
                            <th>Görsel</th>
                            <th>Durum</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Email</td>
                                <td>@item.CommentDetail</td>
                                <td>@item.Rating</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                    {
                                        <img src="@item.ImagePath" alt="Yorum Görseli" style="width: 80px; height: 100px; border-radius: 4px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Görsel yok</span>
                                    }
                                </td>
                                <td>
                                    @(item.Status ? "Aktif" : "Pasif")
                                </td>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-danger btn-delete" data-id="@item.UserCommentId">Sil</button>
                                </td>
                                <td>
                                    <a href="/Admin/UserComment/Update/@item.UserCommentId" class="btn btn-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/Admin/UserComment/Create" class="btn btn-primary">Yeni Yorum Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const commentId = this.getAttribute("data-id");

                    Swal.fire({
                        title: 'Emin misin?',
                        text: "Bu işlemi geri alamazsın!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Hayır, vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/Admin/UserComment/Delete/${commentId}`;
                        }
                    });
                });
            });
        });
    </script>
}


