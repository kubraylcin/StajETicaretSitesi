@model List<ResultProductDto>

<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Sizin İçin Seçtiklerimiz</span>
    </h2>
    <div class="row mx-xl-5">
        @foreach (var item in Model)
        {
            decimal oldPrice = item.ProductPrice * 2; // %50 indirim varmış gibi göster
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 pb-4 d-flex">
                <div class="product-item bg-light mb-3 shadow-sm d-flex flex-column" style="border-radius: 10px; width: 100%;">
                    <div class="product-img position-relative overflow-hidden d-flex align-items-center justify-content-center" style="height: 240px; flex-grow: 1;">
                        <img class="img-fluid" src="@item.ProductImageUrl" alt="@item.ProductName"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="/ShoppingCart/AddBasketItem/@item.ProductId"><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-3 px-2" style="flex-shrink: 0;">
                        <a class="h6 text-decoration-none text-truncate d-block"
                           style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"
                           href="/ProductList/ProductDetail/@item.ProductId">@item.ProductName</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@item.ProductPrice.ToString("N2") ₺</h5>
                            <h6 class="text-muted ml-2"><del>@oldPrice.ToString("N2") ₺</del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-success mr-1"></small>
                            <small class="fa fa-star text-success mr-1"></small>
                            <small class="fa fa-star text-success mr-1"></small>
                            <small class="fa fa-star text-success mr-1"></small>
                            <small class="fa fa-star-half-alt text-success mr-1"></small>
                            <small>(27)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
