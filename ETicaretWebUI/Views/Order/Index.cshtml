@model CreateOrderAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <form method="post">
        <div class="row px-xl-5">
            <!-- SOL TARAF -->
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Teslimat ve Fatura Adresiniz</span>
                </h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Adınız">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail adresiniz </label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="örnek@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numaranız</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 456 789">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İl</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="İl">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mahalle</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Mahalle">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="Cadde,mahalle,sokak ve diğer bilgileri giriniz">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Başlığı</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="Ev,Okul,İş">
                        </div>
                        
                    </div>
                </div>
            </div>

            <!-- SAĞ TARAF -->
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Sipariş Özeti</span>
                </h5>
                @await Component.InvokeAsync("_OrderSummaryComponentPartial")
                @await Component.InvokeAsync("_PaymentMethodComponentPartial")
                
            </div>
        </div>
    </form>
</div>

