@model List<ResultProductWithCategoryDto>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        decimal oldPrice = item.ProductPrice * 2;
        <div class="col-lg-4 col-md-6 col-sm-6 pb-4 d-flex">
            <div class="product-item bg-light mb-4 d-flex flex-column" style="width: 100%; border-radius: 8px;">
                <div class="product-img position-relative overflow-hidden d-flex align-items-center justify-content-center"
                     style="height: 250px; flex-grow: 1;">
                    <img class="img-fluid"
                         style="max-height: 100%; max-width: 100%; object-fit: contain;"
                         src="@item.ProductImageUrl" alt="@item.ProductName" />
                    <div class="product-action">
                        <a class="btn btn-outline-dark btn-square" href="/ShoppingCart/AddBasketItem/@item.ProductId"><i class="fa fa-shopping-cart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                        
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-search"></i></a>
                    </div>
                </div>

                <div class="text-center py-4" style="flex-shrink: 0;">
                    <a class="h6 text-decoration-none text-truncate"
                       href="@Url.Action("ProductDetail", "ProductList", new { id = item.ProductId })">
                        @item.ProductName
                    </a>
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        <h5>@item.ProductPrice.ToString("N2") ₺</h5>
                        <h6 class="text-muted ml-2"><del>@oldPrice.ToString("N2") ₺</del></h6>
                    </div>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small>(99)</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
