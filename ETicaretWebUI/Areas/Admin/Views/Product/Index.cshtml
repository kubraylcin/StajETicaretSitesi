@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h3 class="mb-3">Ürünler Listesi</h3>


                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Ürünün Kategorisi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ProductName</td>
                                <td>@item.ProductPrice</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    <button class="btn btn-danger btn-delete" data-id="@item.ProductId">Sil</button>
                                </td>
                                <td>
                                    <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="mt-3">
                    <a href="/Admin/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Ekle </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const productId = this.getAttribute("data-id");

                    Swal.fire({
                        title: 'Emin misin?',
                        text: "Bu işlemi geri alamazsın!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Hayır, vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Silme işlemine yönlendir
                            window.location.href = `/Admin/Product/DeleteProduct/${productId}`;
                        }
                    });
                });
            });
        });
    </script>
}