@model List<UserCommentResultDto>

@{
    var commentCount = Model.Count;
    var avgRating = commentCount > 0 ? Model.Average(x => x.Rating) : 0;
    int fullStars = (int)Math.Floor(avgRating);
    bool halfStar = avgRating - fullStars >= 0.5;
    int emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
}

<div class="tab-pane fade show " id="tab-pane-3">
    <div class="row">
        <!-- Mevcut Yorumlar -->
        <div class="col-md-6">
            <h4 class="mb-4">@commentCount Değerlendirme</h4>

            @if (commentCount > 0)
            {
                <!-- Ortalama puan ve yıldızlar -->
                <div class="mb-3">
                    <strong>Ortalama Puan: @avgRating.ToString("0.0")</strong>
                    <div class="text-warning">
                        @for (int i = 0; i < fullStars; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                        @if (halfStar)
                        {
                            <i class="fas fa-star-half-alt"></i>
                        }
                        @for (int i = 0; i < emptyStars; i++)
                        {
                            <i class="far fa-star"></i>
                        }
                    </div>
                </div>
            }

            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@(item.ImagePath ?? "/images/kullanıcı.png")" alt="Kullanıcı Resmi" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.NameSurname <small class="text-muted">- <i>@item.CreatedDate.ToString("dd MMMM yyyy")</i></small></h6>
                        <div class="text-warning mb-2">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (int i = 0; i < 5 - item.Rating; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        </div>

        <!-- Yorum Bırakma Formu -->
        @await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml", new { id = ViewBag.x })
    </div>
</div>
<style>
    .text-warning i.fas.fa-star,
    .text-warning i.fas.fa-star-half-alt,
    .text-warning i.far.fa-star {
        color: #28a745 !important; /* yeşil renk */
    }
</style>