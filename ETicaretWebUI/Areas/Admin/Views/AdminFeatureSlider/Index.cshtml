@model List<ResultFeatureSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h3 class="mb-3">Öne Çıkan Görsel Listesi</h3>

                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Resim</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" width="100" /></td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="badge" style="background-color: #28a745 !important; color: white; font-size:16px; padding:8px 16px;">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge" style="background-color: #090A0B !important; color: white; font-size:16px; padding:8px 16px;">Pasif</span>
                                    }

                                </td>
                                <td>
                                    <a href="/Admin/AdminFeatureSlider/DeleteFeatureSlider/@item.FeatureSliderId" class="btn" style="background-color: #dc3545 !important; color: white; border: none;">Sil</a>
                                </td>
                                <td>
                                    <a href="/Admin/AdminFeatureSlider/UpdateFeatureSlider/@item.FeatureSliderId" class="btn" style="background-color: #ffc107 !important; color: #212529; border: none;">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/Admin/AdminFeatureSlider/CreateFeatureSlider" class="btn" style="background-color: #28a745 !important; color: white; border: none;">Yeni Görsel Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>