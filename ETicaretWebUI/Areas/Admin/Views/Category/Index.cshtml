@using ETicaretWebUI.Dtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count=0;
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h3 class="mb-3">Kategori Listesi</h3>
                

                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Görsel</th> <!-- Yeni sütun -->
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.CategoryName</td> 
                                <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                        <img src="@item.ImagePath" alt="Kategori Görseli" style="width: 80px; height: 100px; border-radius: 4px;" />
                                }
                                else
                                {
                                    <span class="text-muted">Görsel yok</span>
                                }
                            </td>
                                <td>
    <button class="btn btn-danger btn-delete" data-id="@item.CategoryId">Sil</button>
</td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success "> Güncelle </a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle </a>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const categoryId = this.getAttribute("data-id");

                    Swal.fire({
                        title: 'Emin misin?',
                        text: "Bu işlemi geri alamazsın!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Hayır, vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/Admin/Category/DeleteCategory/${categoryId}`;
                        }
                    });
                });
            });
        });
    </script>
}
