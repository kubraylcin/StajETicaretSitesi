
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h3 class="mb-3">Hakkımızda Listesi</h3>

                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            
                            <th>Açıklama</th>
                            <th>Adres</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                           
                            <tr>                               
                                <td>@item.Description</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                    <button class="btn btn-danger btn-delete" data-id="@item.AboutId">Sil</button>
                                </td>
                                <td>
                                    <a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const aboutId = this.getAttribute("data-id");

                    Swal.fire({
                        title: 'Emin misin?',
                        text: "Bu işlemi geri alamazsın!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Hayır, vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/Admin/About/DeleteAbout/${aboutId}`;
                        }
                    });
                });
            });
        });
    </script>
}
