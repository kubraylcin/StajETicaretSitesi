                    e.preventDefault();
                    Swal.fire({
                        icon: "error",
                        title: "Hata!",
                        text: "Lütfen bir görsel seçin!"
                    });
                    return;
                }
                if (/\d/.test(categoryName)) {
                    e.preventDefault();
                    Swal.fire({
                        icon: "error",
                        title: "Hata!",
                        text: "Kategori adı sayı içeremez!"
                    });
                    return;
                }
            });
        });
    </script>
}
