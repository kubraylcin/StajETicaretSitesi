@model List<ResultAboutDto>
<div class="container-fluid bg-dark text-secondary mt-5 pt-5">
    <div class="row px-xl-5 pt-5">
        @foreach(var item in Model)
        {
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <h5 class="text-secondary text-uppercase mb-4">Hakkımızda</h5>
                <p class="mb-4"><i class="fa fa-building text-success mr-3"></i>@item.Description</p>
                <p class="mb-4"><i class="fa fa-map-marker-alt text-success mr-3"></i>@item.Address</p>
                <p class="mb-2"><i class="fa fa-envelope text-success mr-3"></i>@item.Email</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-success mr-3"></i>@item.Phone</p>
            </div>
        }
       
        <div class="col-lg-8 col-md-12">
            <div class="row">
                <div class="col-md-4 mb-5">
                    <h5 class="text-secondary text-uppercase mb-4">Kategoriler</h5>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Kadın Giyim</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Erkek Giyim</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Ayakkabılar</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Çocuk Ürünleri</a>
                        <a class="text-secondary" href="#"><i class="fa fa-angle-right mr-2"></i>Tüm Ürünler</a>
                    </div>
                </div>
                <div class="col-md-4 mb-5">
                    <h5 class="text-secondary text-uppercase mb-4">Bilgilendirme</h5>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Anasayfa</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Hakkımızda</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Ürünlerimiz</a>
                        <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Sepetim</a>
                        <a class="text-secondary" href="#"><i class="fa fa-angle-right mr-2"></i>İletişim</a>
                    </div>
                </div>
                <div class="col-md-4 mb-5">
                    <h5 class="text-secondary text-uppercase mb-4">E-Bülten</h5>
                    <p>Yeni ürünler ve kampanyalardan haberdar olmak için e-bültenimize abone olun.</p>
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="E-posta adresiniz">
                            <div class="input-group-append">
                                <button class="btn btn-success">Abone Ol</button>
                            </div>
                        </div>
                    </form>
                    <h6 class="text-secondary text-uppercase mt-4 mb-3">Bizi Takip Edin</h6>
                    <div class="d-flex">
                        <a class="btn btn-success btn-square mr-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-success btn-square mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-success btn-square mr-2" href="#"><i class="fab fa-instagram"></i></a>
                        <a class="btn btn-success btn-square mr-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(255, 255, 255, 0.1) !important;">
        <div class="col-md-6 px-xl-0 text-center text-md-left">
            <p class="mb-md-0 text-secondary">
                &copy; 2025 <a class="text-success" href="#">OrnekBelediyesiShop</a> - Tüm Hakları Saklıdır.
            </p>
        </div>
        <div class="col-md-6 px-xl-0 text-center text-md-right">
            <img class="img-fluid" src="~/images/payments.png" alt="Ödeme Yöntemleri">
        </div>
    </div>
</div>
